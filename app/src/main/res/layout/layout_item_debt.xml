<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_16_dp"
    app:cardCornerRadius="@dimen/radius_4_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_left_border"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_show_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20_dp"
                android:layout_marginTop="@dimen/size_4_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/amount"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_show_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20_dp"
                android:layout_marginTop="@dimen/size_4_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lender"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_show_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20_dp"
                android:layout_marginTop="@dimen/size_4_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/date"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_show_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_show_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20_dp"
                android:layout_marginTop="@dimen/size_4_dp"
                android:layout_marginBottom="@dimen/size_4_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/account"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_show_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_show_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20_dp"
                android:layout_marginBottom="@dimen/size_4_dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/description"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_show_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAppearance="@style/Toolbar.SubCategoryText"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>