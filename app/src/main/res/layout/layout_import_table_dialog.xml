<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:orientation = "vertical">
	
	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginLeft = "@dimen/size_12_dp"
		android:layout_marginTop = "@dimen/size_16_dp"
		android:layout_marginRight = "@dimen/size_12_dp"
		android:orientation = "horizontal">
		
		<TextView
			android:id = "@+id/tv_guideline"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:text = "@string/show_guidelines"
			android:textAppearance = "@style/Toolbar.TitleText" />
		
		<ImageButton
			android:id = "@+id/ib_guideline"
			android:layout_width = "wrap_content"
			android:layout_height = "match_parent"
			android:layout_marginLeft = "@dimen/size_12_dp"
			android:background = "@null"
			android:scaleType = "centerInside"
			android:src = "@drawable/ic_arrow_down" />
	
	</LinearLayout>
	
	<LinearLayout
		android:id = "@+id/ll_guidelines"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginLeft = "@dimen/size_10_dp"
		android:layout_marginRight = "@dimen/size_10_dp"
		android:orientation = "vertical"
		android:visibility = "gone">
		
		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "@dimen/size_8_dp"
			android:layout_marginTop = "@dimen/size_10_dp"
			android:layout_marginRight = "@dimen/size_8_dp"
			android:text = "@string/import_rule_account_heading" />
		
		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "@dimen/size_10_dp"
			android:layout_marginTop = "@dimen/size_4_dp"
			android:layout_marginRight = "@dimen/size_10_dp"
			android:text = "@string/import_rule_account_nickName" />
		
		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "@dimen/size_10_dp"
			android:layout_marginTop = "@dimen/size_4_dp"
			android:layout_marginRight = "@dimen/size_10_dp"
			android:text = "@string/import_rule_account_bankName" />
		
		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "@dimen/size_10_dp"
			android:layout_marginTop = "@dimen/size_4_dp"
			android:layout_marginRight = "@dimen/size_10_dp"
			android:text = "@string/import_rule_account_serviceName" />
		
		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "@dimen/size_10_dp"
			android:layout_marginTop = "@dimen/size_4_dp"
			android:layout_marginRight = "@dimen/size_10_dp"
			android:text = "@string/import_rule_account_accountNo" />
		
		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "@dimen/size_10_dp"
			android:layout_marginTop = "@dimen/size_4_dp"
			android:layout_marginRight = "@dimen/size_10_dp"
			android:text = "@string/import_rule_account_email" />
		
		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "@dimen/size_10_dp"
			android:layout_marginTop = "@dimen/size_4_dp"
			android:layout_marginRight = "@dimen/size_10_dp"
			android:text = "@string/import_rule_account_mobile" />
		
		<TextView
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginLeft = "@dimen/size_10_dp"
			android:layout_marginTop = "@dimen/size_4_dp"
			android:layout_marginRight = "@dimen/size_10_dp"
			android:text = "@string/import_rule_account_balance" />
	
	</LinearLayout>
	
	<TextView
		android:id = "@+id/tv_location"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginLeft = "@dimen/size_12_dp"
		android:layout_marginTop = "@dimen/size_16_dp"
		android:text = "@string/location"
		android:textAppearance = "@style/Toolbar.TitleText" />
	
	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "@dimen/size_48_dp"
		android:layout_marginLeft = "@dimen/size_12_dp"
		android:layout_marginRight = "@dimen/size_12_dp"
		android:orientation = "horizontal">
		
		<EditText
			android:id = "@+id/et_location"
			android:layout_width = "0dp"
			android:layout_height = "@dimen/size_48_dp"
			android:layout_weight = "6"
			android:background = "@color/textColorPrimary"
			android:focusableInTouchMode = "false"
			android:paddingLeft = "@dimen/size_10_dp"
			android:paddingRight = "@dimen/size_10_dp"
			android:singleLine = "true"
			android:textAppearance = "@style/EditText.Text"
			android:textColor = "@color/colorPrimary"
			android:textColorHint = "@color/colorPrimary" />
		
		<ImageButton
			android:id = "@+id/ib_select_location"
			android:layout_width = "0dp"
			android:layout_height = "@dimen/size_48_dp"
			android:layout_marginLeft = "@dimen/size_12_dp"
			android:layout_weight = "1"
			android:background = "#FFFFFF"
			android:scaleType = "centerInside"
			android:src = "@drawable/ic_more_horiz" />
	
	</LinearLayout>

</LinearLayout>